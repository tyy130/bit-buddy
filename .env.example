# Bit Buddy Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# Server Configuration
# =============================================================================

# Host and port for the RAG server
# Default: 127.0.0.1 (localhost only)
# Set to 0.0.0.0 to allow external connections (use with caution)
HOST=127.0.0.1
PORT=8000

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# LLM provider: "llamacpp" or "ollama"
# - llamacpp: Use llama.cpp server (default port 8080)
# - ollama: Use Ollama server (default port 11434)
LLM_PROVIDER=ollama

# Ollama model name (if using ollama provider)
OLLAMA_MODEL=qwen2.5:1.5b-instruct

# llama.cpp server URL (if using llamacpp provider)
LLAMACPP_URL=http://127.0.0.1:8080

# =============================================================================
# Embedding Configuration
# =============================================================================

# Embedding model for RAG
# Recommended: BAAI/bge-small-en-v1.5 (fast, good quality)
# Alternative: all-MiniLM-L6-v2 (smaller, faster)
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Embedding dimension (must match the model)
# bge-small-en-v1.5: 384
# all-MiniLM-L6-v2: 384
EMBEDDING_DIM=384

# =============================================================================
# Knowledge Base Configuration
# =============================================================================

# Directory containing documents for the knowledge base
# Files will be indexed for RAG queries
KB_DIR=kb

# Index directory for embeddings and metadata
INDEX_DIR=index

# Chunk size for document splitting (characters)
CHUNK_SIZE=500

# Overlap between chunks (characters)
CHUNK_OVERLAP=50

# =============================================================================
# Mesh Network Configuration
# =============================================================================

# Enable mesh networking between buddies
MESH_ENABLED=true

# Port range for mesh network (start port)
MESH_PORT_START=8001

# Maximum number of mesh connections
MESH_MAX_CONNECTIONS=10

# =============================================================================
# Buddy Personality
# =============================================================================

# Default buddy name
BUDDY_NAME=Pixel

# Personality randomization seed (leave empty for random)
# PERSONALITY_SEED=

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: json or text
LOG_FORMAT=text

# =============================================================================
# Privacy & Security
# =============================================================================

# Enable request signing for mesh network
REQUIRE_SIGNATURES=false

# Path to secret key for HMAC signing
# SECRET_KEY_PATH=custodian/secret.key

# =============================================================================
# Performance
# =============================================================================

# Number of worker processes for uvicorn
# Default: 1 (single process)
WORKERS=1

# Enable hot reload for development
# Set to false in production
RELOAD=false
